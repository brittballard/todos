<ul class='todos'>
  <% @todos.each do |todo| %>
    <li class="todo<%= ' completed' if todo.complete? %>">
    <%= todo.description %>
    <%= link_to 'Complete', todo_completion_path(todo.id), method: 'POST' %>
    </li>
  <% end %>
</ul>
<%= link_to 'Add new todo', new_todo_path %>
<%= link_to 'Email completed todos', send_todos_todos_path %>
